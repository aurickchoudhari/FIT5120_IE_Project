
@{
    Layout = null;
    ViewBag.Title = "Homepage";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Wildlife Aid Guide</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css">

    <!-- Fonts -->
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/animate.css" rel="stylesheet" />
    <!-- Squad theme CSS -->
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/color/default.css" rel="stylesheet">

    <!--logo on browser tag-->
    <link rel="shortcut icon" href="~/images1/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="~/images1/favicon.ico" type="image/png" />

    <!--load the icon-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-custom">
    <!-- Preloader -->
    <div id="preload">
        <div id="load"></div>
    </div>

    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"> Service </i>
                </button>
                <a class="navbar-brand" href="#"><img alt="Brand" src="~/images1/only_hornes.jpg" height="30" width="30" /></a>
                @Html.ActionLink("WILDLIFE AID GUIDE", "Homepage", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#intro">Home</a></li>
                    <li><a href="#service">What we provide</a></li>
                    <li><a href="#about">About</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->

        </div>
        <!-- /.container -->
    </nav>

    <!-- Section: intro -->
    <section id="intro" class="intro">
        <div class="slogan">
            <h2>WELCOME TO <span class="text_color">Wildlife Aid Guide</span> </h2>
            <h4>We assist you to protect and help the injured wild animals in the Victoria</h4>
        </div>
        <!--number-->
        <br />
        <br />
        <div class="number">
            <h2>Emergency Contact</h2>
            <h5>
                Wildlife Victoria: (03)8440 7300<br />
                Australian Wildlife Protection Council: (03)9650 8326<br />
                Animal Emergency Center:(03)9532 5261<br />
            </h5>
        </div>
        <div class="page-scroll">
            <a href="#service" class="btn btn-circle">
                <i class="fa fa-angle-double-down animated"></i>
            </a>
        </div>
    </section>
    <!-- /Section: intro -->
    <!-- Section: services -->
    <section id="service" class="home-section text-center bg-gray">
        <div class="heading-about">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="wow bounceInDown" data-wow-delay="0.4s">
                            <div class="section-heading">
                                <h2>What we provide</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-lg-offset-5">
                    <hr class="marginbot-50">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="wow fadeInLeft" data-wow-delay="0.2s">
                        <div class="service-box">
                            <div class="service-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="service-desc">
                                <a class="link" href="@Url.Content("~/Home/Statistics")">
                                    <h3>Vehicle Collision</h3>
                                </a>
                                <p>This section will provide several charts to give you an idea about the accidents caused by animals and will help you to avoid them.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="wow fadeInUp" data-wow-delay="0.2s">
                        <div class="service-box">
                            <div class="service-icon">
                                <i class="fas fa-search-plus"></i>
                            </div>
                            <div class="service-desc">
                                <a class="link" href="@Url.Content("~/animal_info/animal_info_index")">
                                    <h3>Animal Information</h3>
                                </a>
                                <p>In this section you will be able to search an animal by its name or description and get valuable information regarding it.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="wow fadeInUp" data-wow-delay="0.2s">
                        <div class="service-box">
                            <div class="service-icon">
                                <i class="fas fa-map-marked-alt"></i>
                            </div>
                            <div class="service-desc">
                                <a class="link" href="@Url.Content("~/Home/stats")">
                                    <h3>Map</h3>
                                </a>
                                <p>In this section we have all the accidents that are caused due to animal collision in the last five years plotted on a map. It will help you to plan your trip.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="wow fadeInRight" data-wow-delay="0.2s">
                        <div class="service-box">
                            <div class="service-icon">
                                <i class="fas fa-comment-alt"></i>
                            </div>
                            <div class="service-desc">
                                <a class="link" href="@Url.Content("~/Feedback/Feedback")">
                                    <h3>Feedback</h3>
                                </a>
                                <p>In this page, you can post your feedback and could mention the places we need improvements. Also, if you want to provide comments for other users, you also can post it in here.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page-scroll">
                <a href="#about" class="btn" style="color:black">
                    <i class="fa fa-2x fa-angle-down animated"></i>
                </a>
            </div>
        </div>
    </section>
    <!-- /Section: services -->
    <!-- Section: about -->
    <section id="about" class="home-section text-center">
        <div class="heading-about">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="wow bounceInDown" data-wow-delay="0.4s">
                            <div class="section-heading">
                                <h2>About Wildlife Aid Guide</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-lg-offset-5">
                    <hr class="marginbot-50">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="wow bounceInUp" data-wow-delay="0.2s">
                        <div class="team boxed-grey">
                            <div class="inner">
                                <p>
                                    <b>
                                        Wildlife Aid Guide provides an effective way to tell the visitors who are curious about saving wild animals how to reduce harmful impacts on wild animals.
                                        The wildlife of Victoria could attract the tourist or new immigrants to Victoria.
                                        Wildlife Aid Guide will provide information to reduce human behavioural impacts on wild animals.
                                    </b>
                                </p>
                                <p>
                                    <b>
                                        The catchword about saving wildlife has been existed for a long time. However, nowadays how many people really get interested in saving wild animals?
                                        People are beginning to forget that saving wildlife is an important and ongoing topic.
                                        Saving wild animals contribute to a sustainable environment. Thus, the reason why people don’t want to focus on the topic of saving wild animals and even less likely to know their behaviours can hurt wild animals. Wildlife Aid Guide provides detailed information about the wild animals and tries to generate all possible impacts on one website.
                                    </b>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page-scroll">
                <a href="#video" class="btn" style="color:black">
                    <i class="fa fa-2x fa-angle-down animated"></i>
                </a>
            </div>
        </div>
    </section>
    <!-- /Section: about -->
    <!--Section: video-->
    <section id="video" class="home-section text-center">
        <div class="heading-about">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="wow bounceInDown" data-wow-delay="0.4s">
                        <div class="section-heading">
                            <h2>Animals In Australia</h2>
                            <h3>This a non copyright video  of the Australian Wildlife</h3>
                            <iframe style="width:100%" height="400" src="https://www.youtube.com/embed/7Hqmf3fvyZ8" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/Section: video-->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-12">
                    <div class="wow shake" data-wow-delay="0.4s">
                        <div class="page-scroll marginbot-30">
                            <a href="#intro" id="totop" class="btn btn-circle">
                                <i class="fa fa-angle-double-up animated"></i>
                            </a>
                        </div>
                    </div>
                    <p>&copy; JASH  All photos published on Wildlife Aid Guide come from https://collections.museumvictoria.com.au/api/species with all rights reserved &middot;</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Core JavaScript Files -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/scroll")
    @Scripts.Render("~/bundles/custom")
</body>

</html>
